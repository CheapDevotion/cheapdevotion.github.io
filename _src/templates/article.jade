block title
  title = page.title

extends layout

block content
  .blog-single.readable-content
    article.post.type-post.format-standard.hentry
      header.entry-header
        h1.entry-title= page.title
      if (page.metadata.author)
        .entry-meta
          | posted on 
          span= moment.utc(page.date).format('MMM DD, YYYY ') 
          span.by-author by 
            span.author.vcard
              a.url.fn.n(href='#', title='View all posts by #{ page.metadata.author }', rel='author')= page.metadata.author
          | .
        ul.social
          li 
            .fb-like(data-width='200', data-layout='button_count', data-action='like', data-show-faces='true', data-share='true')
          li 
            a.twitter-share-button(href='https://twitter.com/share', data-via='cheapdevotion') Tweet
            
            
  
      .entry-content
        p.lead!= typogr(page.html).typogrify()

      if (page.metadata.comments)
        #disqus_thread
