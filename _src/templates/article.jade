block title
  title = page.title

extends layout

block content
  .blog-single.readable-content
    article.post.type-post.format-standard.hentry
      header.entry-header
        h1.entry-title= page.title
      if (page.metadata.author)
        .entry-meta
          | posted on 
          span= moment.utc(page.date).format('MMM DD, YYYY ') 
          span.by-author by 
            span.author.vcard
              a.url.fn.n(href='#', title='View all posts by #{ page.metadata.author }', rel='author')= page.metadata.author
          | .
            
            
  
      .entry-content
        p!= page.html

      if (page.metadata.social)
        .addthis_sharing_toolbox

      if (page.metadata.comments)
        #disqus_thread
          script(type='text/javascript')
            /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
            var disqus_shortname = 'cheapdevotion'; // required: replace example with your forum shortname
            /* * * DON'T EDIT BELOW THIS LINE * * */
            (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
            })();
          noscript
            | Please enable JavaScript to view the
            a(href='http://disqus.com/?ref_noscript') comments powered by Disqus.
          a.dsq-brlink(href='http://disqus.com')
            | comments powered by
            span.logo-disqus Disqus


